{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "dialog:default",
    "fs:default",
    {
      "identifier": "fs:allow-write-text-file",
       "allow": [
        {"path": "C:\\**"},
        {"path": "D:\\**"},
        {"path": "E:\\**"},
        {"path": "F:\\**"},
        {"path": "G:\\**"},
        {"path": "H:\\**"},
        {"path": "A:\\**"},
        {"path": "B:\\**"},
        {"path": "$APPDATA/**"},
        {"path": "$DOCUMENT/**"},
        {"path": "$HOME/**"}
      ],
      "deny": [
        {"path": "C:\\Windows\\**"},
        {"path": "C:\\ProgramData\\**"}
      ]
    },
    {
      "identifier": "fs:allow-exists",
      "allow": [
        {"path": "C:\\**"},
        {"path": "D:\\**"},
        {"path": "E:\\**"},
        {"path": "F:\\**"},
        {"path": "G:\\**"},
        {"path": "H:\\**"},
        {"path": "A:\\**"},
        {"path": "B:\\**"},
        {"path": "$APPDATA/**"},
        {"path": "$DOCUMENT/**"},
        {"path": "$HOME/**"},
        {"path": "$CONFIG/**"}
      ],
      "deny": [
        {"path": "C:\\Windows\\**"},
        {"path": "C:\\ProgramData\\**"}
      ]
    },
    {
      "identifier": "fs:allow-read-text-file",
       "allow": [
        {"path": "C:\\**"},
        {"path": "D:\\**"},
        {"path": "E:\\**"},
        {"path": "F:\\**"},
        {"path": "G:\\**"},
        {"path": "H:\\**"},
        {"path": "A:\\**"},
        {"path": "B:\\**"},
        {"path": "$APPDATA/**"},
        {"path": "$DOCUMENT/**"},
        {"path": "$HOME/**"}
      ],
      "deny": [
        {"path": "C:\\Windows\\**"},
        {"path": "C:\\ProgramData\\**"}
      ]
    },
    {
      "identifier": "fs:allow-create",
       "allow": [
        {"path": "C:\\**"},
        {"path": "D:\\**"},
        {"path": "E:\\**"},
        {"path": "F:\\**"},
        {"path": "G:\\**"},
        {"path": "H:\\**"},
        {"path": "A:\\**"},
        {"path": "B:\\**"},
        {"path": "$APPDATA/**"},
        {"path": "$DOCUMENT/**"},
        {"path": "$HOME/**"}
      ],
      "deny": [
        {"path": "C:\\Windows\\**"},
        {"path": "C:\\ProgramData\\**"}
      ]
    },
    {
      "identifier": "fs:allow-mkdir",
      "allow": [
        {"path": "C:\\**"},
        {"path": "D:\\**"},
        {"path": "E:\\**"},
        {"path": "F:\\**"},
        {"path": "G:\\**"},
        {"path": "H:\\**"},
        {"path": "A:\\**"},
        {"path": "B:\\**"},
        {"path": "$APPDATA/**"},
        {"path": "$DOCUMENT/**"},
        {"path": "$HOME/**"}
      ],
      "deny": [
        {"path": "C:\\Windows\\**"},
        {"path": "C:\\ProgramData\\**"}
      ]
    }
  ]
}
